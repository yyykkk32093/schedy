{
    "name": "backend",
    "version": "1.0.0",
    "type": "module",
    "scripts": {
        "dev": "NODE_ENV=local npx ts-node --project tsconfig.server.json src/api/server.ts --esm",
        "build": "tsc -p tsconfig.server.json && tsc-alias -p tsconfig.server.json",
        "start": "NODE_ENV=production node dist/api/server.js",
        "test": "vitest",
        "test:e2e": "vitest run --no-file-parallelism --maxWorkers=1 --sequence.concurrent=false test/e2e/*.test.ts",
        "test:watch": "vitest --watch",
        "test:cov": "vitest run --coverage"
    },
    "ts-node": {
        "esm": true,
        "experimentalSpecifierResolution": "node"
    },
    "dependencies": {
        "@aws-sdk/client-secrets-manager": "^3.985.0",
        "@prisma/client": "^6.19.0",
        "bcrypt": "^6.0.0",
        "body-parser": "^2.2.0",
        "cors": "^2.8.5",
        "dotenv": "^16.6.1",
        "dotenv-flow": "^4.1.0",
        "express": "^5.1.0",
        "jose": "^6.1.3",
        "jsonwebtoken": "^9.0.2",
        "pino": "^10.1.0",
        "prisma": "^6.19.0",
        "undici": "^7.16.0"
    },
    "devDependencies": {
        "@types/bcrypt": "^6.0.0",
        "@types/body-parser": "^1.19.6",
        "@types/cors": "^2.8.19",
        "@types/express": "^5.0.5",
        "@types/jsonwebtoken": "^9.0.10",
        "@types/node": "^22.19.0",
        "@types/supertest": "^6.0.3",
        "pino-pretty": "^13.1.2",
        "supertest": "^7.1.4",
        "ts-node": "^10.9.2",
        "tsc-alias": "^1.8.16",
        "tsconfig-paths": "^4.2.0",
        "typescript": "~5.8.3",
        "vite-tsconfig-paths": "^5.1.4",
        "vitest": "^4.0.8"
    }
}