// Prismaで使うDBクライアント設定
generator client {
  provider = "prisma-client-js"
}

// 接続先DB（.env.local の DATABASE_URL が参照される）
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ---- OutboxEvent テーブル定義 ----
model OutboxEvent {
  id           String   @id @default(uuid())
  eventName    String
  aggregateId  String
  payload      String
  status       String   @default("PENDING")
  occurredAt   DateTime @default(now())
  publishedAt  DateTime?
}

model AuditLog {
  id          String   @id
  eventName   String
  userId      String
  authMethod  String
  occurredAt  DateTime
  createdAt   DateTime @default(now())
}