// Prismaで使うDBクライアント設定
generator client {
  provider = "prisma-client-js"
}

// 接続先DB（.env.local の DATABASE_URL が参照される）
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ---- OutboxEvent テーブル定義 ----


model OutboxEvent {
  id            String   @id
  aggregateId   String
  eventName     String
  eventType     String
  routingKey    String
  payload       Json
  occurredAt    DateTime
  publishedAt   DateTime?
  status        String   // PENDING | PUBLISHED | FAILED

  retryCount    Int       @default(0)
  maxRetries    Int       @default(5)
  retryInterval Int       @default(5000) // ms

  @@index([status, occurredAt])
}

enum OutboxStatus {
  PENDING
  PUBLISHED
  FAILED
}


model AuditLog {
  id         String   @id @default(cuid())
  eventType  String
  userId     String
  authMethod String
  detail     String?
  occurredAt DateTime
  createdAt  DateTime @default(now())
}